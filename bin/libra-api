import os
import sys
sys.path.append('/home/stack/libra')

from libra.api import config
from libra.openstack.common import wsgi
from oslo.config import cfg
from libra.api import router 


if __name__ == '__main__':
    try:
        
        port = cfg.CONF.bind_port
        host = cfg.CONF.bind_host
        
                                       
        # TODO - David lenwell .. set up logging the right way .. 
        #logger = setup_logging('libra-api', args)
        #logging.setup('libra')
        
        
        #LOG.info('Starting Libra API on %s:%s' % (host, port))
        server = wsgi.run_server(router.API, port)
        
        
    except RuntimeError, e:
        sys.exit("ERROR: %s" % e)